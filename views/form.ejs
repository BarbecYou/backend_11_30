<body>
    <form action="" method="post">
        <p>
            <label>
                Márka:<br>
                <input name="brand" type="text">
            </label>
        </p>
        <p>
            <label>
                Típus:<br>
                <input name="type" type="text">
            </label>
        </p>
        <p>
            <label>
                Szín:<br>
